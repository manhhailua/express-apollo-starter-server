{
  "name": "graphql-starter-server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint --fix **/*.js --config .eslintrc.json",
    "start": "nodemon ./bin/www --ignore *.test.js --exec \"npm run lint & babel-node\"",
    "test": "jest --forceExit",
    "test:coverage": "jest --coverage --forceExit"
  },
  "author": {
    "name": "Manh Pham (manhpt)",
    "email": "manhhailua@gmail.com"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js}",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "setupFiles": [
      "<rootDir>/test/config.js"
    ]
  },
  "engines": {
    "node": ">= 8.9.0",
    "npm": ">= 5.5.1"
  },
  "dependencies": {
    "apollo-server-express": "^1.3.2",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "debug": "^3.1.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "graphql": "^0.13.1",
    "graphql-tools": "^2.21.0",
    "morgan": "^1.9.0",
    "nconf": "^0.10.0",
    "pug": "^2.0.0-rc.4",
    "serve-favicon": "^2.4.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "@babel/node": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^22.4.1",
    "eslint": "^4.18.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "jest": "^22.4.2",
    "nodemon": "^1.17.1",
    "prettier": "^1.11.1",
    "regenerator-runtime": "^0.11.1",
    "supertest": "^3.0.0"
  }
}
